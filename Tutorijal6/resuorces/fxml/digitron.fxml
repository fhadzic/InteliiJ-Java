<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>


<?import javafx.scene.control.Label?>
<GridPane alignment="center" hgap="10" vgap="10"
          xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="ba.unsa.etf.rpr.tutorijal05.Controller">

    <padding>
        <Insets top="5" right="5" left="5" bottom="5"/>
    </padding>

    <stylesheets>
        <URL value = "@../css/digitron.css"/>
    </stylesheets>

    <rowConstraints>
      <RowConstraints percentHeight="16.66" vgrow="ALWAYS"/>
      <RowConstraints percentHeight="16.66" vgrow="ALWAYS"/>
      <RowConstraints percentHeight="16.66" vgrow="ALWAYS"/>
      <RowConstraints percentHeight="16.66" vgrow="ALWAYS"/>
      <RowConstraints percentHeight="16.66" vgrow="ALWAYS"/>
      <RowConstraints percentHeight="16.66" vgrow="ALWAYS"/>
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints percentWidth="25" hgrow="ALWAYS"/>
      <ColumnConstraints percentWidth="25" hgrow="ALWAYS"/>
      <ColumnConstraints percentWidth="25" hgrow="ALWAYS"/>
      <ColumnConstraints percentWidth="25" hgrow="ALWAYS"/>
   </columnConstraints>

    <children>
        <Label fx:id = "display" text="${controller.display}" maxWidth="Infinity" GridPane.columnSpan="4" />
        <!-- Row 1 -->
        <Button fx:id ="buttonPercent" onAction="#buttonPercentClick" text="\%" maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.rowIndex="1"/>
        <Button fx:id ="buttonDivide" onAction="#buttonDivideClick" text="/" maxWidth="Infinity"
                GridPane.columnIndex="1"
                GridPane.rowIndex="1"/>
        <Button fx:id ="buttonMultiple" onAction="#buttonMultipleClick" text="x" maxWidth="Infinity"
                GridPane.columnIndex="2"
                GridPane.rowIndex="1"/>
        <Button fx:id ="buttonDecrease" onAction="#buttonDecreaseClick" text="-" maxWidth="Infinity"
                GridPane.columnIndex="3"
                GridPane.rowIndex="1"/>
        <!-- Row 2 -->
        <Button fx:id ="btn7" text="7" onAction="#buttonSevenClick" maxWidth="Infinity" GridPane.columnIndex="0"
                GridPane.rowIndex="2"/>
        <Button fx:id ="btn8" text="8" onAction="#buttonEightClick" maxWidth="Infinity" GridPane.columnIndex="1"
                GridPane.rowIndex="2"/>
        <Button fx:id ="btn9" text="9" onAction="#buttonElevenClick" maxWidth="Infinity" GridPane.columnIndex="2"
                GridPane.rowIndex="2"/>
        <Button fx:id ="plusBtn" text="+" onAction="#buttonPlusClick" maxWidth="Infinity" maxHeight="Infinity" GridPane.columnIndex="3"
                GridPane.rowIndex="2"
                GridPane.rowSpan="2"/>
        <!-- Row 3 -->
        <Button fx:id ="btn4" text="4" onAction="#buttonFourClick" maxWidth="Infinity" GridPane.columnIndex="0"
                GridPane.rowIndex="3"/>
        <Button fx:id ="btn5" text="5" onAction="#buttonFiveClick" maxWidth="Infinity" GridPane.columnIndex="1"
                GridPane.rowIndex="3"/>
        <Button fx:id ="btn6" text="6" onAction="#buttonSixClick" maxWidth="Infinity" GridPane.columnIndex="2"
                GridPane.rowIndex="3"/>
        <!-- Row 4 -->
        <Button fx:id ="btn1" text="1" onAction="#buttonOneClick" maxWidth="Infinity" GridPane.columnIndex="0"
                GridPane.rowIndex="4"/>
        <Button fx:id ="btn2" text="2" onAction="#buttonTwoClick" maxWidth="Infinity" GridPane.columnIndex="1"
                GridPane.rowIndex="4"/>
        <Button fx:id ="btn3" text="3" onAction="#buttonThreeClick" maxWidth="Infinity" GridPane.columnIndex="2"
                GridPane.rowIndex="4"/>
        <Button fx:id ="equalsBtn" text="=" onAction="#buttonEqualsClick" maxWidth="Infinity" maxHeight="Infinity" GridPane.columnIndex="3"
                GridPane.rowIndex="4"
                GridPane.rowSpan="2"/>
        <!-- Row 5 -->
        <Button fx:id ="btn0" text="0" onAction="#buttonZeroClick" maxWidth="Infinity" GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.rowIndex="5" />
        <Button fx:id ="dotBtn" text="." onAction="#buttonCommaClick" maxWidth="Infinity" GridPane.columnIndex="2"
                GridPane.rowIndex="5"/>
    </children>


</GridPane>
